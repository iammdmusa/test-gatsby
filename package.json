{
  "name": "WINGFIELD_WEB_FRONTEND_APP",
  "description": "Marking tennis smart",
  "version": "1.0.0",
  "author": "Musa <md.musa@my-wingfield.com>",
  "dependencies": {
    "gatsby": "^2.1.30",
    "gatsby-plugin-react-helmet": "^3.0.9",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-helmet": "^5.2.0"
  },
  "keywords": [
    "gatsby",
    "storybook",
    "jest"
  ],
  "license": "ISC",
  "scripts": {
    "commit": "git-cz",
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --ignore-path .gitignore --write '**/*.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "standard --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.3.4",
    "@storybook/addon-actions": "^5.0.1",
    "@storybook/addon-links": "^5.0.1",
    "@storybook/addons": "^5.0.1",
    "@storybook/react": "^5.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.4.0",
    "babel-loader": "^8.0.5",
    "babel-runtime": "^6.26.0",
    "commitizen": "^3.1.1",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "enzyme-to-json": "^3.3.5",
    "husky": "^2.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.4.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.16.4",
    "standard": "^12.0.1",
    "standard-version": "^8.0.1",
    "wait-on": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iammdmusa/test-gatsby.git"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/jest-preprocess.js"
    },
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss)$": "identity-obj-proxy",
      ".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "/.cache/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(gatsby)/)"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "globals": {
      "__PATH_PREFIX__": ""
    },
    "setupFiles": [
      "<rootDir>/loadershim.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "export CI=true && lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "standard --fix",
      "git add"
    ]
  },
  "standard": {
    "globals": [
      "jest",
      "it",
      "expect",
      "test",
      "describe"
    ]
  }
}
